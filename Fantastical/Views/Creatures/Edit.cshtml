@model Fantastical.Models.ViewModel.CreatureEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Creature</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" asp-controller="Creatures">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Creature.Id" />
            <div class="form-group">
                <label asp-for="Creature.Name" class="control-label"></label>
                <input asp-for="Creature.Name" class="form-control" />
                <span asp-validation-for="Creature.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Creature.Lore" class="control-label"></label>
                <input asp-for="Creature.Lore" class="form-control" />
                <span asp-validation-for="Creature.Lore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Creature.Region" class="control-label"></label>
                <input asp-for="Creature.Region" class="form-control" />
                <span asp-validation-for="Creature.Region" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <input asp-for="Creature.ImagePath" type="hidden" class="form-control" />
                <span asp-validation-for="Creature.ImagePath" class="text-danger"></span>
            </div>*@
            <div class="form-group row">
                <label asp-for="Image" class="col-sm-2 col-form-label">Update Image</label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Image" type="file" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose Image...</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input asp-for="Creature.ImagePath" type="hidden" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
